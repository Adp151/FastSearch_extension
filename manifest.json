{
    "name": "Fast search extension",
    "version": "1.0",
    "description": "Fast search for Google/Yandex",
    "permissions":[
        "storage",
        "https://www.yandex.ru/",
        "http://www.yandex.ru/"
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "browser_action": 
    {
        "default_title": "Touch to open search!",
        "default_icon": "images/searchIcon.png",
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}