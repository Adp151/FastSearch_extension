{
    "name": "Fast search extension",
    "version": "1.0",
    "description": "Fast search for Google/Yandex",
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "js/popup.js"
        ]
    }],
    "browser_action": 
    {
        "default_title": "Touch to open search!",
        "default_icon": "images/searchIcon.png",
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}